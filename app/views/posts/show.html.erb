<h1>post show route</h1>

<h1><%=@post.title%></h1>
<div class ='postImage'>
<%= image_tag @post.image.url %>
</div>
<p><%=@post.content%></p>

<p> Tags:
<% @post.tags.each do |tag| %>
    <%= link_to tag.keyword, tag_path(tag) %>
  <% end %>
</p>

<%# section for comments %>
<h2><%=@post.comments.count%> Comments:</h2>
<% @post.comments.each do |c| %>
  <p><%= c.user.username%> : <%=c.comment %> <%= link_to 'X', comment_path(c), method: :delete, class: 'ui button' if c.user == current_user || current_user.username == "livefreela" %></p>
<% end %>


<h3>reply to thread</h3>
<%= form_for [@post, @comment], html: {class: "nifty_form"} do |f| %>
  <%= f.text_area :comment, size: "40x8" %>
  <%= f.submit "Create" %>
  
<% end %>



<%= link_to 'Home', root_path %>
<%= link_to 'Edit', edit_post_path(@post)%>
<%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: "Are you sure you want to do this?"}%> 