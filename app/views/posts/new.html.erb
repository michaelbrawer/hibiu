<h1>Create a New Post:</h1>

<%= form_for @post, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
<%= label_tag :title %> : <br>
<%= f.text_field :title %><br>
<%= label_tag :content %> : <br>
<%= f.text_area :content, size: "40x8" %><br>
<%= label_tag :image %> : <br>
<%= f.file_field :image %><br>
<%= label_tag :tags %> : <br>
<%= f.text_field :all_tags, placeholder: "separate tag w comma" %><br><br>
<%= label_tag :create %> : <br>
<%= f.submit "Create" %>
<% end %>
