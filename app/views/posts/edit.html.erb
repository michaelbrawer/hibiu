<h1>Edit Post</h1>

<%= form_for @post, url: {action: "update"}, html: {class: "nifty_form"} do |f| %>
  <%= f.text_field :title %>
  <%= f.text_area :content, size: "60x12" %>
  <%= f.file_field :image %>
  <%= f.text_field :all_tags, placeholder: "Tags separated with comma" %>
  <%= f.submit "update" %> 
<% end %>


<%= link_to 'Never mind, return to post', post_path(@post) %>